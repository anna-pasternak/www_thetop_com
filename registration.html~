		<p><center><font color="black">Username: </font> <input type = text name = "username" id = "username" required autofocus></center></p>
		<p><center><font color="black">Password: </font> <input type = password name = "password" id = "password" required></center></p>
		<p><center><font color="black">Verify: </font> <input type = password name = "verifypassword" id = "verifypassword" required onblur="check()"></center></p>
		<center><span id="warn" style="color:red"> </span></center>

